@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-md-3">
            @{ Html.RenderAction("Index", "AccountSummary"); }
        </div>

        <div class="col-md-8 col-md-offset-1">
            <h2>Deposits and withdrawals</h2>
            <div class="list-group-item">
                <h4 class="list-group-item-heading">Deposit cash</h4>
                @using (Html.BeginForm("Deposit", "Cash", FormMethod.Post, new { @class = "form-inline", role = "form" }))
                {
                    <div class="form-group">
                        @Html.TextBox("amount", "", new { @class="form-control", size="10", placeholder="Enter amount"})
                    </div>
                    <button type="submit" class="btn btn-default">Confirm</button>
                }
            </div>
            <div class="list-group-item">
                <h4 class="list-group-item-heading">Withdraw cash</h4>
                <form class="form-inline" role="form">
                    <div class="form-group">
                        <input type="text" class="form-control" size="10" placeholder="Enter amount">
                    </div>
                    <button type="submit" class="btn btn-default">Confirm</button>
                </form>
            </div>
        </div>
    </div>
</div>